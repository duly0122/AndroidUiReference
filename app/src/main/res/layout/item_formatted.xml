<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/ui_datetime"
        android:layout_width="133dp"
        android:layout_height="24dp"
        android:text="1900\01\01 23:59:59"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ui_top_text"
        android:layout_width="200dp"
        android:layout_height="24dp"
        android:layout_marginStart="10dp"
        android:text="top text"
        android:textSize="16sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/ui_datetime"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ui_bottom_text"
        android:layout_width="312dp"
        android:layout_height="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        android:text="Bottom Text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ui_datetime" />

    <ImageView
        android:id="@+id/ui_icon"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cup" />

</androidx.constraintlayout.widget.ConstraintLayout>